# .env.example for LYRA project
# Copy to .env and fill in actual values

# Common
ENV=development

# API Gateway
API_GATEWAY_HOST=api-gateway
API_GATEWAY_PORT=50051
WORKER_CONCURRENCY=4

# Whisper Service
WHISPER_SERVICE_HOST=whisper-service
WHISPER_SERVICE_PORT=50052

# Telegram Bot
TELEGRAM_BOT_HOST=telegram-bot
TELEGRAM_BOT_PORT=50053
